{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "detailed_file": {
            "format": "[%(asctime)s] [%(levelname)-8s] [%(name)-25s] : %(message)s"
        }
    },
    "handlers": {
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "detailed_file",
            "filename": "logs/simulation.log",
            "maxBytes": 10485760,
            "backupCount": 5,
            "encoding": "utf8"
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": [
            "file"
        ]
    }
}